<%- include('partials/header'); %>
<div>
<% if (applications.length > 0) { %>
	<table class="table">
		<thead class="thead-dark">
			<tr>
				<th>Program</th>
                <th>Student</th>
                <th>Status</th>
                <th>Action</th>
			</tr>
		</thead>
		<tbody>
		<% for (let i = 0; i < applications.length; i++) { %>
                <tr>
                    <td><%= applications[i].program.title %></td>
                    <td><%= applications[i].student.first_name %></td>
                    <td><%= applications[i].status %></td>
                    <td>
                        <a href="application/accept/<%= applications[i].id %>" class="btn btn-sm btn-success">Accept</a>
                        <a href="application/deny/<%= applications[i].id %>" class="btn btn-sm btn-danger">Deny</a>
                    </td>
                </tr>
		<% } %>
		</tbody>
	</table>
<% } else { %>
	<p class="text-center">No applications found.</p>
<% } %>
</div>
</div>
</body>
</html>